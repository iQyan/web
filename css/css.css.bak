*{ padding:0; margin:0;}

body{
	background:#efefef;
}
/*
==========================================
 CLASS
==========================================
*/
.page
{
	position: relative;
	min-height:100%;
}
.wrapper{
	width: 100%;
}
.head{
	display:block;
	z-index:100;

	width: 100%;
	height:18px;

	background-color:#ffffff;
	border-bottom:1px solid #ef8c8c;
	opacity:0.4;
}
.contents{
	width: 992px;
	height : 600px;
	background-color:#ffffff;
}
.photo-container{

	position:relative;
	float:left;
	width: 600px;
	height: 600px;
	background-color:#f00;
}
.photo-container-image{
	
	margin:0 auto;
	width:480px;
	height:480px;
	border:1px solid #eeeeee;
}
.photo-container-description{
	margin: 0 auto;
	width:480px;
	height:100px;
	border-bottom:1px solid #eeeeee;
}
.control-container{
	position:relative;
	float:left;
	width:390px;
	height:600px;
	border-left:1px solid #eeeeee;
}
